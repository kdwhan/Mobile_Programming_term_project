<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width = "match_parent"
    android:layout_height = "match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="433dp"
        tools:context="daewhan.example.com.mp_final_project.MapsActivity" />

    <EditText
        android:id="@+id/et_feel"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/map"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Write what happened"
        android:layout_above="@+id/bt_save" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/bt_save"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Like"
        android:id="@+id/cb_like"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:checked="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hate"
        android:id="@+id/cb_hate"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/cb_like"
        android:layout_toEndOf="@+id/cb_like"
        android:layout_marginLeft="42dp"
        android:layout_marginStart="42dp"
        android:checked="false" />

</RelativeLayout>

